source leaprc.DNA.bsc1          # Load the DNA bsc1 force field
source leaprc.water.tip4pew     # Load the TIP4PEW water model

# Load the PDB file of your molecule
mol = loadPdb Output/xRNA_rename.pdb 

# Solvate the molecule in a box of TIP4PEW water
solvateBox mol TIP4PEWBOX 10.0

# Add ions to neutralize the system and reach 0.05 M MgCl2 concentration 
addIonsRand mol MG 10
addIonsRand mol Cl- 10 


# Save the parameter and coordinate files
saveAmberParm mol Output/xRNA_solv.prmtop Output/xRNA_solv.inpcrd
# Save the solvated PDB file for reference
savePdb mol Output/xRNA_solvated.pdb
quit
